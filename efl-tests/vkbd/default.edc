#define CLICK_AREA_DY 27
#define SKEY(key_text, key_name, x, y)                                 \
         part {                                                        \
            name: "key-bg-"key_name;                                   \
            type: RECT;                                                \
            no_mouse_grab: 1;                                          \
            description {                                              \
               state: "default" 0.0;                                   \
               min: CLICK_AREA_W CLICK_AREA_H;                         \
               max: CLICK_AREA_W CLICK_AREA_H;                         \
