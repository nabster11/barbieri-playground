               state: "default" 0.0;
               color: 0 0 0 0;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 13 13;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -14 -278;
               }
            }
         }

         part {
            name: "field";
            mouse_events: 0;
            type: TEXTBLOCK;
            description {
               state: "default" 0.0;
               color: 30 30 30 255;
               rel1 {
                  to: "field_bg";
                  relative: 0 0;
                  offset: 4 4;
               }
