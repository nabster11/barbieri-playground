         program {
            name: ".?12_clicked";
            signal: "mouse,clicked,1";
            source: "special-2:key-bg-.?12";
            after: "toggle-special-1";
         }


         program {
            name: "init";
            signal: "show";
            after: "toggle-alpha";
         }
      }
