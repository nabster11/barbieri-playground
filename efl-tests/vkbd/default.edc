fonts {
   font: "VeraBd.ttf" "key";
}

images {
   image: "background.png" COMP;
   image: "keyboard-background.png" COMP;
   image: "key-default.png" COMP;
   image: "key-default-selected.png" COMP;
   image: "key-special.png" COMP;
   image: "backspace.png" COMP;
   image: "shift.png" COMP;
}

styles {
   style {
      name: "field_style";
      base: "font=key font_size=28 align=left valign=top color=#000 wrap=word style=shadow shadow_color=#666";
      tag: "br" "  \n";
   }
}

collections {
   group {
      name: "main";

      min: 800 480;

      parts {
         part {
            name: "background";
            type: IMAGE;
            description {
               state: "default" 0.0;
               rel1 {
                  relative: 0.0 0.0;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -1;
               }
               image {
                  normal: "background.png";
                  border: 13 13 13 13;
               }
            }
         }

         part {
            name: "field_bg";
            mouse_events: 0;
