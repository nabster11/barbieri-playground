            name: "show-alpha";
            signal: "show-alpha";
            action: STATE_SET "default" 0.0;
            target: "alpha";
         }
         program {
            name: "hide-alpha";
            signal: "hide-alpha";
            action: STATE_SET "hidden" 0.0;
            target: "alpha";
         }

         program {
            name: "hide-special-1";
            signal: "hide-special-1";
            action: STATE_SET "hidden" 0.0;
            target: "special-1";
