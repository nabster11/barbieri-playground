[Unit]
Description=SLIM Display Manager
Wants=syslog.target dbus.target hald.service
After=acpid.service

[Service]
ExecStart=/usr/bin/slim -nodaemon
Restart=restart-always
RestartSec=1

[Install]
Alias=display-manager.service
WantedBy=graphical.target
